pipeline {
  agent any
  options { 
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Say Hello') {
      steps {
       container('nodejs') {
        echo 'Hello World!'   
        sh 'java -version'
        sh 'df -hP /'
        sh 'uname -a'
        sh 'free -g'
        sh 'nproc'
        }
      }
    }
  }
}
